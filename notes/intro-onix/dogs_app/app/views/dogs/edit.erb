<h1>Edita de tu perro</h1>

<form action="/dogs/<%= @dog.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= @dog.name %>"><br>
  <label for="age">Age</label>
  <input type="number" name="age" value="<%= @dog.age %>"><br>
  <input type="submit" value="Evolucionar perro">
</form>
